{
  "manifest_version": 3,
  "name": "Better Timer",
  "version": "3.4",
  "description": "A dark, clean timer with naval blue bar, sound, and notifications.",
  "permissions": ["storage", "notifications", "alarms", "offscreen"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "wall-clock.png"
  },
  "icons": {
    "16": "wall-clock.png",
    "48": "wall-clock.png",
    "128": "wall-clock.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["ding.mp3", "offscreen.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
